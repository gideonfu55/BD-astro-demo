---
const { title, description } = Astro.props
const defaultDescription = 'This is a demo site for Astro.'

const pageTitle = title + ' | ' + 'Astro Demo'
const pageDescription = description || defaultDescription
const canonicalURL = Astro.canonicalURL.href
console.log(Astro.canonicalURL)
---

<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<title>{ title }</title>
<!-- This part is use for SEO and easier understanding for users when the search for this page: -->
<meta name="title" content={pageTitle} />
<!-- The page will either show a description for the page if present, or the default description at defined at the top. -->
<meta name="description" content={pageDescription}>
<link rel="canonical" href={Astro.canonicalURL.href} />